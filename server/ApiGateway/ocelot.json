{
  "GlobalConfiguration": {
    "BaseUrl": "${BASE_URL}"
  },
  "Routes": [
    {
      "UpstreamPathTemplate": "/gateway/auth",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/auth",
      "DownstreamScheme": "${DOWNSTREAM_SCHEME}",
      "DownstreamHostAndPorts": [
        {
          "Host": "${AUTH_SERVICE_HOST}",
          "Port": "${AUTH_SERVICE_PORT}"
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/auth/{id}",
      "UpstreamHttpMethod": [ "Put", "Delete" ],
      "DownstreamPathTemplate": "/api/auth/{id}",
      "DownstreamScheme": "${DOWNSTREAM_SCHEME}",
      "DownstreamHostAndPorts": [
        {
          "Host": "${AUTH_SERVICE_HOST}",
          "Port": "${AUTH_SERVICE_PORT}"
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/auth/register",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/auth/register",
      "DownstreamScheme": "${DOWNSTREAM_SCHEME}",
      "DownstreamHostAndPorts": [
        {
          "Host": "${AUTH_SERVICE_HOST}",
          "Port": "${AUTH_SERVICE_PORT}"
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/auth/login",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/auth/login",
      "DownstreamScheme": "${DOWNSTREAM_SCHEME}",
      "DownstreamHostAndPorts": [
        {
          "Host": "${AUTH_SERVICE_HOST}",
          "Port": "${AUTH_SERVICE_PORT}"
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/auth/send-email",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/auth/send-email",
      "DownstreamScheme": "${DOWNSTREAM_SCHEME}",
      "DownstreamHostAndPorts": [
        {
          "Host": "${AUTH_SERVICE_HOST}",
          "Port": "${AUTH_SERVICE_PORT}"
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/auth/reset-password",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/auth/reset-password",
      "DownstreamScheme": "${DOWNSTREAM_SCHEME}",
      "DownstreamHostAndPorts": [
        {
          "Host": "${AUTH_SERVICE_HOST}",
          "Port": "${AUTH_SERVICE_PORT}"
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/auth/verify-token",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/auth/verify-token",
      "DownstreamScheme": "${DOWNSTREAM_SCHEME}",
      "DownstreamHostAndPorts": [
        {
          "Host": "${AUTH_SERVICE_HOST}",
          "Port": "${AUTH_SERVICE_PORT}"
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/shorten",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/shorten",
      "DownstreamScheme": "${DOWNSTREAM_SCHEME}",
      "DownstreamHostAndPorts": [
        {
          "Host": "${SHORTEN_SERVICE_HOST}",
          "Port": "${SHORTEN_SERVICE_PORT}"
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/crud",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/crud",
      "DownstreamScheme": "${DOWNSTREAM_SCHEME}",
      "DownstreamHostAndPorts": [
        {
          "Host": "${CRUD_SERVICE_HOST}",
          "Port": "${CRUD_SERVICE_PORT}"
        }
      ],
      "AuthenticationOptions": { "AuthenticationProviderKey": "Bearer" }
    },
    {
      "UpstreamPathTemplate": "/gateway/crud/{id}",
      "UpstreamHttpMethod": [ "Get", "Put", "Delete" ],
      "DownstreamPathTemplate": "/api/crud/{id}",
      "DownstreamScheme": "${DOWNSTREAM_SCHEME}",
      "DownstreamHostAndPorts": [
        {
          "Host": "${CRUD_SERVICE_HOST}",
          "Port": "${CRUD_SERVICE_PORT}"
        }
      ],
      "AuthenticationOptions": { "AuthenticationProviderKey": "Bearer" }
    }
  ]
}